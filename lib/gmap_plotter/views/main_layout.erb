<html>
    <head>
      <title>Gmap Plotter - A google map plotter</title>
      <style>
          #map-canvas {
              height: 70%;
              margin: 0px;
              padding: 0px
          }
      </style>

      <link rel="stylesheet" href="/bower_components/semantic-ui/dist/semantic.min.css">
      <script src="/bower_components/jquery/dist/jquery.min.js"></script>
      <script src="/bower_components/semantic-ui/dist/semantic.min.js"></script>
      <script src="https://maps.googleapis.com/maps/api/js?v=3.exp"></script>
    </head>

    <body>
        <div class="ui page">
          <!-- github fork me -->
          <div class="right floated left aligned six wide column">
            <a class="item">
              <a href="https://github.com/lexruee/gmap_plotter"><img style="position: absolute; top: 0; right: 0; border: 0;" src="https://camo.githubusercontent.com/38ef81f8aca64bb9a64448d0d70f1308ef5341ab/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f6461726b626c75655f3132313632312e706e67" alt="Fork me on GitHub" data-canonical-src="https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png"></a>
            </a>
          </div>

          <!-- main page -->
          <div class="ui page grid">
            <!-- grid -->
            <div class="ui grid">
              <!-- header -->
              <div class="sixteen wide column">

                <div class="ui left aligned grid">
                  <div class="left floated left aligned six wide column">
                    <h1><i class="location marker icon"></i> Gmap Plotter</h1>
                  </div>

                </div>
              </div> <!-- end of header -->

              <!-- side menu -->
              <div class="four wide column">
                <div class="ui vertical menu">
                  <div class="header item">
                    Plot
                  </div>
                  <a class="teal item" id="plot-markers">
                    Markers
                  </a>
                  <a class="teal item" id="plot-path">
                    Path
                  </a>
                  <a class="item" id="plot-file">
                    File
                  </a>
                </div>

                <div class="ui vertical menu">
                  <div class="header item">
                    Settings
                  </div>

                  <div class="item">

                    <div class="ui form">
                      <div class="grouped fields">
                        <label for="map-type">Select a map type:</label>

                        <div class="field">
                          <div class="ui radio checkbox" id="set-roadmap">
                            <input type="radio" name="map-type" checked="">
                            <label>Roadmap</label>
                          </div>
                        </div>
                        <div class="field">
                          <div class="ui radio checkbox" id="set-satellite">
                            <input type="radio" name="map-type">
                            <label>Satellite</label>
                          </div>
                        </div>
                        <div class="field">
                          <div class="ui radio checkbox" id="set-hybrid">
                            <input type="radio" name="map-type">
                            <label>Hybrid</label>
                          </div>
                        </div>
                        <div class="field">
                          <div class="ui radio checkbox" id="set-terrain">
                            <input type="radio" name="map-type">
                            <label>Terrain</label>
                          </div>
                        </div>
                      </div>
                    </div>

                  </div>

                </div>

              </div> <!-- end of side menu -->

              <!-- main content -->
              <div class="twelve wide column">
                <%= yield %>
              </div> <!-- end of main content -->

              <div class="sixteen wide column">

                  Copyright lexruee.ch

              </div>
            </div> <!-- end of grid -->

          </div> <!-- end of main page -->
        </div>
        <script src="/app.js"></script>
    </body>
</html>
